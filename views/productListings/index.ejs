<% layout("/layouts/boilerplate") %>

<body class="bg-light">
  <div class="container py-4">
    <% if (allProducts.length > 0) { %>
      <div class="row g-4">
        <% for (let product of allProducts) { %>
          <div class="col-sm-12 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm rounded-4">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.title %>" style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1 fs-5"><%= product.title %></h5>
                <!-- <p class="card-text text-muted small"><%= product.description.slice(0, 60) %>...</p> -->
                <div class="mb-1"><strong>â‚¹<%= product.price.toLocaleString("en-IN") %></strong></div>
                <div class="text-muted small mb-1">Category: <%= product.category %></div>
                <a href="/products/show/<%= product._id %>" class="btn btn-success mt-auto w-100">View Product</a>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <h3 class="text-center">No products found for this category</h3>
    <% } %>

    
  </div>
</body>
