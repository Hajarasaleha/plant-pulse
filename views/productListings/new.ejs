<% layout("/layouts/boilerplate") %>

<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow rounded-4">
          <div class="card-body">
            <h3 class="card-title mb-4 text-center">Add Product</h3>
            <form action="/products" method="POST" class="needs-validation" novalidate>
              
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="product[title]" id="title" type="text" class="form-control" placeholder="Add a title" required>
                <div class="invalid-feedback">Please enter a product title.</div>
              </div>

              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="product[description]" id="description" class="form-control" placeholder="Add description" required></textarea>
                <div class="invalid-feedback">Please enter a description.</div>
              </div>

              <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input name="product[image]" id="image" type="url" class="form-control" placeholder="Add image URL" required>
                <div class="invalid-feedback">Please provide a valid image URL.</div>
              </div>

              <div class="mb-3">
                <label for="price" class="form-label">Price (â‚¹)</label>
                <input name="product[price]" id="price" type="number" class="form-control" placeholder="Add price" min="1" required>
                <div class="invalid-feedback">Please enter a valid price.</div>
              </div>

              <div class="mb-4">
                <label for="category" class="form-label">Category</label>
                <select name="product[category]" id="category" class="form-select" required>
                  <option value="">-- Select Category --</option>
                  <option value="fertilizers">Fertilizers</option>
                  <option value="seeds">Seeds</option>
                  <option value="plants">Plants</option>
                  <option value="agricultural tools">Agricultural Tools</option>
                  <option value="irrigation tools">Irrigation Tools</option>
                </select>
                <div class="invalid-feedback">Please select a category.</div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-success">Add Product</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>